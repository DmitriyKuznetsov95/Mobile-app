<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="horizontal"
    tools:context=".Main6Activity">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/list_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_above="@id/line4">
    </androidx.recyclerview.widget.RecyclerView>

    <LinearLayout
        android:id="@+id/line4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/colorPrimary"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button1_4"
            android:drawableTop="@drawable/ic_home"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            android:drawablePadding="-15dp"
            android:onClick="newsClick"
            android:text="@string/tabbed_menu"
            android:textSize="10sp"/>

        <Button
            android:id="@+id/button2_4"
            android:drawableTop="@drawable/ic_list_chemp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            android:drawablePadding="-10dp"
            android:text="Список чемпионатов"
            android:onClick="list_chempClick"
            android:textSize="10sp" />

        <Button
            android:id="@+id/button3_4"
            android:drawableTop="@drawable/ic_list_people"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            android:drawablePadding="-10dp"
            android:text="Список участников"
            android:onClick="list_peopleClick"
            android:textSize="10sp"/>

        <Button
            android:id="@+id/button4_4"
            android:drawableTop="@drawable/ic_list_gallery_white"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            android:drawablePadding="-15dp"
            android:text="Галерея"
            android:textColor="#FFFFFF"
            android:textSize="10sp"/>
    </LinearLayout>

</RelativeLayout>